<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/phobookbackground"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".RegisterActivity">

    <EditText
            android:id="@+id/emailR"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textColor="@color/yazi"
            android:hint="E-mail"
            android:textColorHint="@color/yazi"
            android:inputType="textEmailSubject"
            android:layout_marginTop="250dp"/>

    <EditText
            android:id="@+id/passwordR"
            android:layout_below="@+id/emailR"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textColor="@color/yazi"
            android:hint="Şifre"
            android:ems="10"
            android:inputType="textPassword"
            android:textColorHint="@color/yazi"
    />

    <Button
            android:id="@+id/register"
            android:textColor="@color/yazi"
            android:layout_below="@+id/passwordR"
            android:text="Kayıt Ol"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:background="@color/login"
            android:layout_marginTop="9dp"/>

    <TextView
            android:id="@+id/loginback"
            android:textColor="@android:color/white"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Giriş Yap"
            android:layout_below="@+id/register"
            android:layout_marginTop="80dp"/>

</RelativeLayout>